@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

@if (Model.ShowMessage)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>   </button>
        @Model.Message
    </div>
}

<div class="agenda">
    <h1>My Conference @System.DateTime.Now.Year</h1>

    <ul class="nav nav-pills">
        @foreach (var day in Model.DayOffsets)
        {
            <li role="presentation" class="nav-item">
                <a class="nav-link @(Model.CurrentDayOffset == day.Offset ? "active" : null)" asp-route-day="@day.Offset">@day.DayofWeek?.ToString()</a>
            </li>
        }
    </ul>

    @foreach (var timeSlot in Model.Sessions)
    {
        <h4>@timeSlot.Key?.ToString("HH:mm")</h4>
        <div class="container mt-3">
            <div class="row">
                <div class="card-deck">
                    @foreach (var session in timeSlot)
                    {
                        <div class="card mb-4 session">
                            <div class="card-header">@session.Track?.Name</div>
                            <div class="card-body">
                                <h5 class="card-title"><a asp-page="Session" asp-route-id="@session.ID">@session.Title</a></h5>
                            </div>
                            <div class="card-footer">
                                @foreach (var speaker in session.Speakers)
                                {
                                <button type="button" class="btn btn-outline-secondary btn-sm" asp-page="Speaker" asp-route-id="@speaker.ID">@speaker.Name</button>
                                }
                                <form authz="true" method="post">
                                    <input type="hidden" name="sessionId" value="@session.ID" />
                                    <p>
                                        <a authz-policy="Admin" asp-page="/Admin/EditSession" asp-route-id="@session.ID" class="btn btn-default btn-sm">Edit</a>
                                        @if (Model.UserSessions.Contains(session.ID))
                                        {
                                            <button type="submit" asp-page-handler="Remove" class="btn btn-default btn-sm" title="Remove from my personal agenda">
                                                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-default btn-sm" title="Add to my personal agenda">
                                                <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                                            </button>
                                        }
                                    </p>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>